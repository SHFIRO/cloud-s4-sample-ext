<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0" metadata-complete="false">

	<login-config>
		<!-- Cloud Foundry specific authentication method -->
		<auth-method>XSUAA</auth-method>
	</login-config>
	
    <security-role>
        <description>All authenticated users</description>
        <role-name>Everyone</role-name>
    </security-role>
    
    <security-role>
        <description>Allowed to import and edit the data</description>
        <role-name>Admin</role-name>
    </security-role>
    
    <security-role>
        <description>Allowed to view the data</description>
        <role-name>Viewer</role-name>
    </security-role>

	<security-constraint>
        <web-resource-collection>
            <web-resource-name>Entire website</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Viewer</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Import REST service</web-resource-name>
            <url-pattern>/rest/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Admin</role-name>
        </auth-constraint>
    </security-constraint>
    
	<!-- CSRF protection required by SAPUI5 Smart Controls is handled by the approuter -->

</web-app>
